<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.dorin.greenhouse.MainActivity">

    <LinearLayout
        android:id="@+id/humidityButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:background="@color/colorAccentGreen"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/humidityButtonImage"
                android:src="@drawable/humidity"
                android:layout_width="@dimen/button_height"
                android:layout_height="match_parent"
                android:background="@color/colorAccentGreenDark"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@+id/humidityButtonImage"
                android:weightSum="5">

                <TextView
                    android:id="@+id/humidityValueText"
                    android:text="32%"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="48sp"
                    android:textStyle="bold"
                    android:layout_weight="2"
                    android:paddingLeft="16sp"
                    android:paddingTop="4sp"/>

                <TextView
                    android:id="@+id/humidityModeText"
                    android:text="auto (32%)"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:layout_weight="3"
                    android:paddingLeft="16sp"/>
            </LinearLayout>

            <RelativeLayout
                android:clickable="true"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/humidityDropdown"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_weight="1"
            android:background="@drawable/dropdown_background"
            android:weightSum="2"
            android:visibility="gone">

            <ToggleButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="40px"
                android:layout_weight="1"
                android:textOff="Manual"
                android:textOn="Auto" />

            <SeekBar
                android:id="@+id/seekBar"
                android:max="100"
                android:progress="50"
                android:layout_width="300px"
                android:layout_height="match_parent"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/temperatureButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@color/colorAccentGreen"
        android:layout_below="@+id/humidityButton"
        android:layout_marginTop="24px">

        <ImageView
            android:id="@+id/lightButtonImage"
            android:src="@drawable/temperature"
            android:layout_width="@dimen/button_height"
            android:layout_height="match_parent"
            android:background="@color/colorAccentGreenDark"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/lightButtonImage"
            android:weightSum="5">

            <TextView
                android:id="@+id/lightValueText"
                android:text="22 °C"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:paddingLeft="16sp"
                android:paddingTop="4sp"/>

            <TextView
                android:id="@+id/lightModeText"
                android:text="auto (22 °C)"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_weight="3"
                android:paddingLeft="16sp"/>
        </LinearLayout>

        <RelativeLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/lightButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:background="@color/colorAccentGreen"
        android:layout_below="@+id/temperatureButton"
        android:layout_marginTop="24px">

        <ImageView
            android:id="@+id/temperatureButtonImage"
            android:src="@drawable/light"
            android:layout_width="@dimen/button_height"
            android:layout_height="match_parent"
            android:background="@color/colorAccentGreenDark"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@+id/temperatureButtonImage"
            android:weightSum="5">

            <TextView
                android:id="@+id/temperatureValueText"
                android:text="45 %"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="48sp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:paddingLeft="16sp"
                android:paddingTop="4sp"/>

            <TextView
                android:id="@+id/temparatureModeText"
                android:text="OFF"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="20sp"
                android:layout_weight="3"
                android:paddingLeft="16sp"/>
        </LinearLayout>

        <RelativeLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/selectableItemBackground">

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
